        <div class="wrapper">
        
        <form action="/addassociation_event_post" method="post">
        <div class="primary">
            <div class="heading">
                <h2>Add Event</h2>
            </div>
          <div class="secondary">
            <div class="form-group form-group-1">
                <label for="clubname">Event Name</label><br>
                <select class="form-control" name="associationname" placeholder="select club">
                    <option >CSEA</option>
                    <option >ECEA</option>
                    <option >EEA</option>
                    <option >MEA</option>
                    <option >MMEA</option>
                    <option >ChEA</option>
                    <option >CEA</option> 
                    <option >BEA</option>
              </select>
            </div>
            <div class="form-group form-group-1">
                <label for="event">Event Name</label><br>
                <input class="form-control" type="text" name="event"  required />
            </div>
            <div class="form-group form-group-1">
                <label for="date">Date</label><br>
                <input class="form-control" type="date" id="date" name="date"  required/>
            </div>
            <div class="form-group form-group-1">
                <label for="form">From</label><br>
                <input class="form-control" type="time"  name="from" step="60" placeholder="12:00 am" required />
            </div>
            <div class="form-group form-group-1">
                <label for="to">To</label><br>
                <input class="form-control" type="time" name="to"  step="60" placeholder="12:00 am"required />
            </div>
            <div class="form-group form-group-1">
                <label for="venue">Venue</label><br>
                <input class="form-control " type="text" name="venue"  required />
            </div>
            <br>
            <div class="form-group form-group-1">
                <label for="guest">Guest Speaker</label><br>
                <input class="form-control " type="text" name="guest"  />
            </div>
            <div class="form-group form-group-1">
              <label for="image">Image Path</label><br>
              <input class="form-control " type="text" name="image"/>
          </div>
        </div>
           <div class="form-group form-group-2">
            <label for="description">Description(upto 50 words)</label><br>
            <textarea class="form-control-1 " name="description" rows="4" maxlength="350" placeholder="enter description upto 50 words" required ></textarea>
          </div>
            <div class="ffp form-group">
                <button class="btn" type="submit">Submit</button>
            </div>
        </div>
        </form>
       </div>
       </div>
    <script>
        
        function formatDate(input) {
           var date = new Date(input.value);
              if (!isNaN(date.getTime())) {
              var day = date.getDate().toString().padStart(2, '0');
             var month = (date.getMonth() + 1).toString().padStart(2, '0');
               var year = date.getFullYear();
            var formattedDate = year + '-' + month + '-' + day;
            input.value = formattedDate;
          }
       }
       function convertTime(input) {
         var time = input.value.split(':');
         var hours = parseInt(time[0]);
         var minutes = time[1];
         var suffix = hours >= 12 ? 'PM' : 'AM';
         hours = ((hours + 11) % 12 + 1);
          input.value = hours + ':' + minutes + ' ' + suffix;
      }

    </script>
