    <div class="wrapper2">
    
        <div class="heading">
        <h3>Update Club Member</h3>
        </div>
        <form action="/update_search_clubmember" method="post">
        <div class="primary">
            <div class="form-group">
                <label for="clubname">Club Name</label><br>
                <select class="form-control" name="clubname" placeholder="select club">
                    <option >Shilpi</option>
                    <option >Entrepreneurship and Innovation Cell</option>
                    <option >Graphi Cafe</option>
                    <option >Brindavanam</option>
                    <option >Shresta</option>
                    <option >praayatnam</option>
                    <option >Literary and Debate</option> 
                    <option >Dhwani</option>
                    <option >Painting and Photography</option>
                    <option >Nature and Value Education</option>
                    <option >Physical Education</option>
                    <option >Task Force</option>
              </select>
            </div>
            <div class="form-group">
                <label for="regno">Regno</label><br>
                <input class="form-control" type="text" name="regno"  required />
            </div>
            
            <div class="ffp form-group">
                <button class="btn" type="submit">Submit</button>
            </div>
        </div>
        </form>
    
        <%if(condition){%>
        <div class="update-form">
          
            <div class="wrapper">
                <form action="/update_clubmember_post/<%=users.clubname%>/<%=users.regno%>" method="post">
                <div class="heading1">
                    <h2>Update Club Member</h2>
                </div>
              <div class="wrap-sec">
                <div class=" update-group-2">
                    <h4>Club Name</h4>
                    <p><%= users.clubname %></p>
                </div>
                <div class="update-group-2">
                    <h4>Name</h4>
                    <p><%= users.name %></p>
                </div>
                <div class=" update-group-2">
                    <h4>Regno</h4>
                    <p><%= users.regno%></p>
                </div>
                <div class="update-group ">
                    <label for="rollno">Rollno</label><br>
                    <input class="group-control group-control-1" type="text" id="rollno" name="rollno"  value="<%=users.rollno %>"  onchange="formatDate(this)" />
                </div>
                <br>
                <div class="update-group update-group-1">
                    <label for="branch">Branch</label><br>
                    <input class="group-control" type="text"  name="branch"  value="<%=users.branch %>" />
                </div>
                <div class="update-group update-group-1">
                    <label for="year">Year</label><br>
                    <input class="group-control" type="text" name="year"  value="<%=users.year %>" />
                </div>
                <div class="update-group ">
                    <label for="position">Position</label><br>
                    <input class="group-control " type="text" name="position"  value="<%=users.position %>" />
                </div>
                <div class="update-group ">
                    <label for="email">Email</label><br>
                    <input class="group-control " type="text" name="email"  value="<%=users.email %>" />
                </div>
                <div class="update-group ">
                    <label for="contact">Contact</label><br>
                    <input class="group-control " type="text" name="contact"  value="<%=users.contact %>" />
                </div>
                
            </div>
                <div class="ffp form-group">
                    <button class="btn" type="submit">Update</button>
                </div>
               </form>
               <form action="delete_clubmember/<%=users.clubname%>/<%=users.regno%>" method="get">
                <p class="mid">-------------- or -----------------</p>
                <div class="ffp form-group">
                    <button class="btn" type="submit">Delete</button>
                </div>
              </form>
            </div>
     </div>
     <%}%>
   <p id="msg-1"><%=msg%></p>
    </div>
