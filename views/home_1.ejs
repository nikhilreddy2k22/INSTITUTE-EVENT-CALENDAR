<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Welcome to NIT-AP | NIT Andhra Pradesh Event</title>
    <link  rel="stylesheet" href="./home_1.css">

 </head>
  <body>
    <nav>
        
        <div class="logo">
            <img src="images/logo.png" alt="NIT ANDHRAPRADESH" height="100px" width="100px" style="margin-left: 2%">
            
        </div>
 
        <ul>
            <li>
                <a href="/">HOME</a>
            </li>
            <li>
                <a href="/clubs">CLUBS</a>
            </li>
            <li>
                <a href="/associations">ASSOCIATIONS</a>
            </li>
            <li>
                <a href="/admin">LOGIN</a>
            </li>
        </ul>
        <h2 class="logoname">NIT ANDHRAPRADESH</h2>
    </nav>
    <div class="welcomebox">
        <!-- <img src="/images/event.jpg" width="100%" height="400px"> -->
    </div>
    <div class="nav" style="height: 70px;">
        <h3 class="upcoming" style="padding: 0 100px;">Upcoming Events</h3>
    </div>
    <div class="upcomingcontainer">
        
       
        <% for (var i = 0; i < Math.min(length1,up.length); i++) { %>
            <div class="card">
            <div class="image">
                 <img src="<%=up[i].imagepath%>" alt="Image">
            </div>
            <div class="content">
                
                <p><%=up[i].description%>
                </p>
            </div>
            <div class="card-actions">
                <% if(resultclub1.includes(up[i])){ %>
                
                    <a href="/upcoming_club_event_view/<%=up[i].clubname%>/<%=up[i].eventname%>/<%=up[i].date1%>" class="button">View</a>
    
                    <%
                } 
                else{  %>
                    <a href="/upcoming_association_event_view/<%=up[i].associationname%>/<%=up[i].eventname%>/<%=up[i].date1%>" class="button">View</a>
                    <%
                }
                %>
                <div  class="text"><%=up[i].date1.toISOString().substring(0,10)%></div>
                      </div>
          </div>
           <% }; %>
    </div>
    
  
  <div class="split-container">
    <div class="left-half"><a href="/up_showless" style="text-decoration: none;">Show Less</a></div>
    <div class="right-half"><a href="/up_showmore" style="text-decoration: none;">Show More</a></div>
  </div>
  <div class="nav" style="height: 70px;">
    <h3 class="upcoming2" style="padding: 0 100px;">Past Events</h3>
    
 </div>

 <div class="pastcontainer">
    
    
    <% for (var i = 0; i < Math.min(length2,past.length); i++) { %>
        <div class="card">
        <div class="image">
             <img src="<%=past[i].imagepath%>" alt="Image">
        </div>
        <div class="content">
            
            <p><%=past[i].description%>
            </p>
        </div>
        <div class="card-actions">
            <% if(resultclub2.includes(past[i])){ %>
            
                <a href="/past_club_event_view/<%=past[i].clubname%>/<%=past[i].eventname%>/<%=past[i].date1%>" class="button">View</a>

                <%
            } 
            else{  %>
                <a href="/past_association_event_view/<%=past[i].associationname%>/<%=past[i].eventname%>/<%=past[i].date1%>" class="button">View</a>
                <%
            }
            %>
            <div  class="text"><%=past[i].date1.toISOString().substring(0,10)%></div>
                  </div>
      </div>
       <% }; %>
    
</div>
    <div class="split-container">
        <div class="left-half"><a href="/past_showless" style="text-decoration: none;">Show Less</a></div>
        <div class="right-half"><a href="/past_showmore" style="text-decoration: none;">Show More</a></div>
      </div>
 
</body>
<div class="footer">
    <div class="split-container">
        <div class="left-half"><p class="f">Made for NIT ANDHRAPRADESH</p></div>
        <div class="right-half"><a href="#" style="text-decoration: none;">Back to top</a></div>
      </div>
  </div>
  
</html>